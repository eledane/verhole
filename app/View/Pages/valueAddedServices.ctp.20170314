                       $("."+that.showContent).addClass("hide");

                       $("."+names).removeClass("hide");

                       $(".kheight").siblings(".lifetitlearrow").addClass("hide");
                       $(".kheight").siblings(".lifetitlearrow1").addClass("hide");

                       $(".kheight").parent().removeClass("active");

                       $(this).siblings(".lifetitlearrow").removeClass("hide");
                       $(this).siblings(".lifetitlearrow1").removeClass("hide");


                       thisf.addClass("active");
                      
                       that.showContent=names;
                   }
            })

            

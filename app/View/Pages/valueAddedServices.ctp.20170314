                       $("."+that.showContent).addClass("hide");


                       $("."+that.showStr).addClass("hide");


                       $("."+str).removeClass("hide");
                       $(".server-nav ul li").removeClass("active");
                       $(this).addClass("active");
                       $(".arrows").attr("src", downs);
                       that.showStr=str;


                       if(str=="k_all"){
                          that.showContent="show_2";
                           $("."+that.showContent).removeClass("hide");
                       }else{
                          that.showContent="show_0";  
                           $("."+that.showContent).removeClass("hide");

                       }

                       //that.showContent
                  }
            })




            $(".kheight").on("click",function(){
                   var ind=$(this).attr("rel");
                   var names="show_"+ind;
                   var thisf=$(this).parent();
                   
                   

